\newcommand*{\labelescape}[1]{
	\makecommand*{\@tempstring}{#1}
	\IfSubStr{\@tempstring}{|}{\StrBefore*{\@tempstring}{|}[\@tempstring]}{}
	\IfSubStr{\@tempstring}{@}{\StrBefore*{\@tempstring}{@}[\@tempstring]}{}
	\StrDel{\@tempstring}{ }[\@tempstring]
	\StrDel{\@tempstring}{!}[\@tempstring]
	\StrDel{\@tempstring}{,}[\@tempstring]
	\StrDel{\@tempstring}{;}[\@tempstring]
	\StrDel{\@tempstring}{$}
}

