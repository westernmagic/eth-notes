\hopatch@AfterPackage{xifthen}{
	\newcommand*\OptionSwitch[1]{
		\newboolean{#1}
		\setboolean{#1}{false}
		\DeclareOption{#1}{
			\setboolean{#1}{true}
		}
		\DeclareOption{no-#1}{
			\setboolean{#1}{false}
		}
	}
}

